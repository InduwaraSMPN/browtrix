# Browtrix MCP Server Environment Configuration
# Copy this file to .env and modify values as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# Connection Management
MAX_CONNECTIONS=10
REQUEST_TIMEOUT=30.0
ENABLE_HEALTH_CHECKS=true

# Health Monitoring
MAX_IDLE_TIME=1800.0
HEALTH_CHECK_INTERVAL=60.0

# Tool Configuration
SNAPSHOT_DEFAULT_TIMEOUT=10
SNAPSHOT_MAX_TIMEOUT=60
ALERT_DEFAULT_TIMEOUT=60
ALERT_MAX_TIMEOUT=300

# MCP Configuration
MCP_SERVER_NAME=browtrix-server
MCP_SERVER_VERSION=1.0.0
MCP_TRANSPORT=sse

# Feature Flags
ENABLE_METRICS=false
ENABLE_CORS=true
DEBUG_MODE=false